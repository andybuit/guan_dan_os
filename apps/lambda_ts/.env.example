# Environment Configuration
# Copy this file to .env.local and fill in your values

# Environment (local, staging, production)
ENVIRONMENT=local

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=000000000000

# LocalStack Configuration (for local development)
LOCALSTACK_ENDPOINT=http://localhost:4566
USE_LOCALSTACK=true

# DynamoDB Configuration
DYNAMODB_ENDPOINT=http://localhost:4566

# API Gateway (WebSocket)
WEBSOCKET_API_ENDPOINT=ws://localhost:3001

# Application Settings
TURN_TIMEOUT_MS=30000
RECONNECT_GRACE_PERIOD_MS=30000
AI_AUTO_FILL_TIMEOUT_MS=10000
GAME_START_COUNTDOWN_MS=10000

# Game History Retention
ACTIVE_GAME_RETENTION_DAYS=30
ANONYMOUS_GAME_RETENTION_DAYS=7

# Rate Limiting
MAX_ROOMS_PER_PLAYER=3
MAX_GAMES_PER_DAY=100

# Monitoring & Logging
LOG_LEVEL=debug
ENABLE_XRAY=false
ENABLE_METRICS=false

# Security
JWT_SECRET=your-secret-key-here-change-in-production
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:19006
